#SELECT company_name, industry, employees, healthcare_benefits
FROM fortune_companies
WHERE industry = 'Healthcare' AND healthcare_benefits = 1 AND employees > 3000;


#Find industries where the total revenue exceeds 1,000:
SELECT industry, SUM(revenue) AS total_revenue
FROM fortune_companies
GROUP BY industry
HAVING SUM(revenue) > 1000;


#Calculate the revenue per employee for each company and name the new column revenue_per_employee:
SELECT company_name, revenue, employees, 
revenue / employees AS revenue_per_employee
FROM fortune_companies;


#Classify companies into "High Revenue" or "Low Revenue" based on whether their revenue is above or below 300:
SELECT company_name, revenue,
CASE
WHEN revenue > 300 THEN 'High Revenue'
ELSE 'Low Revenue'
END AS revenue_category
FROM fortune_companies;

#Find industries where the total revenue exceeds 1,000:
SELECT industry, SUM(revenue) AS total_revenue
FROM fortune_companies
GROUP BY industry
HAVING SUM(revenue) > 1000;
